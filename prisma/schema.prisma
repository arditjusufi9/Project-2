
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum roles {
  Shef
  Puntor
}
 model Users{
  id Int @id@default(autoincrement())
  name String
  email String @unique
  role roles
 createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Tasks Tasks[]
 }

model Tasks{
  id Int @id @default(autoincrement())
  task String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  taskID Int?
  user Users? @relation(fields: [taskID],references: [id])
  TaskStatus TaskStatus[]
}

 enum Status {
  to_do
  in_progress
  blocked
  in_review
  done
}

model TaskStatus {
  id        Int      @id @default(autoincrement())
  status    Status
  updatedAt DateTime @updatedAt
  statusId     Int
  Task Tasks @relation(fields: [statusId],references: [id])
}
